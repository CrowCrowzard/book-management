<% content_for :ogp do %>
  <meta property="og:title" content="<%= @book.title %>-monolist" />
  <meta property="og:description" content="<%= @book.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。" />
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="book-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @book.large_image.present? %>
            <%= image_tag(@book.large_image , alt: @book.title) %>
          <% else %>
            <%= image_tag("no-image.png", alt: @book.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @book.title %>
      </div>
      <%= render 'action' , book: @book %>
    </div>
    <div class="book-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% if @have_users.any? %>
            <div class="user_avatars">
              <% @have_users.each do |have_user| %>
                <%= link_to gravatar_for(have_user, size: 30), have_user %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% if @want_users.any? %>
            <div class="user_avatars">
              <% @want_users.each do |want_user| %>
                <%= link_to gravatar_for(want_user, size: 30), want_user %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @book.detail_page_url, target: "_blank") %>
      </div>
    </div>
  </div>
</div>
