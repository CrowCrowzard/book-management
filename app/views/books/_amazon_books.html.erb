<div class="container">
  <div class="container-inner inner-default clearfix">
    <% amazon_books.each do |book| %>
      <div class="book-box">
        <div class="image">
          <div class="img-wrap">
            <% if book.get('LargeImage/URL').present? %>
              <%= image_tag(book.get('LargeImage/URL'), alt: book.get('ItemAttributes/Title')) %>
            <% else %>
              <%= image_tag("no-image.png", alt: book.get('ItemAttributes/Title')) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= book.get('ItemAttributes/Title') %>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(asin: book.get('ASIN') , type: "Want") ,
                      :class => "want-#{book.get('ASIN')} btn-want btn btn-danger btn-sm want",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(asin: book.get('ASIN') , type: "Have") ,
                      :class => "have-#{book.get('ASIN')} btn-have btn btn-warning btn-sm have",
                      :remote => true,
                      :method => :post %>
        </div>
      </div>
    <% end %>
  </div>
</div>