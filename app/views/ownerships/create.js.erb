<% if params[:type] == "Have" %>
  $(".have-<%= @book.id %>,.have-<%= @book.asin %>").replaceWith("<%= escape_javascript(render('books/unhave' , book: @book)) %>");
<% else %>
  $(".want-<%= @book.id %>,.want-<%= @book.asin %>").replaceWith("<%= escape_javascript(render('books/unwant' , book: @book)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');