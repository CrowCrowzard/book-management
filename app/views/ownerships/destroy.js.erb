<% if params[:type] == "Have" %>
  $(".have-<%= @book.id %>").replaceWith("<%= escape_javascript(render('books/have' , book: @book)) %>");
<% else %>
  $(".want-<%= @book.id %>").replaceWith("<%= escape_javascript(render('books/want' , book: @book)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');